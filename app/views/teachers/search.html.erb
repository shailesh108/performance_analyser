<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<div class="login-panel panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Search Teacher using Standard and Subject</h3> 
				</div>
				<div class="panel-body">
				<%=form_tag search_result_teachers_path, :method => 'get', enforce_utf8: false,class: "form-horizontal"  do |f| %>
					
				<div class="col-sm-12 text-center">
					<div class="form-group">
						<%= label_tag "Standard", nil, class: "col-sm-4" %>	
						<div class="col-sm-4">
							<%= select_tag 'standard_id', options_from_collection_for_select(Standard.all, 'id', 'name'), {class: "form-control"} %>
						</div>
					</div>
				
					<div class="form-group">
						<%= label_tag "Subject", nil, class: "col-sm-4" %>	
						<div class="col-sm-4">
							<%=select_tag 'subject_id',	options_from_collection_for_select(Subject.all, 'id', 'sub_name'), {class: "form-control"}%>
						</div>
					</div>
</div>
				</div>
			</div>
		</div>
			<div class="actions">
				<div class="col-sm-12 text-center">
					<%= submit_tag "Search Teacher", :name => nil, :class=> "btn btn-success" %>
					<%= link_to "Cancel", admin_welcome_path, :class => "btn btn-danger" %> 
				</div>
			</div>
			<%end%>
	</div>
</div>