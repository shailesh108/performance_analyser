
  <div class="container">
  <div class="row">
    <div class="col-sm-11"> <div class="profile-content">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"> <i class="glyphicon glyphicon-th-list"></i> Listing Teachers</h3>
        </div>
        <div class="panel-body">
    

      <div class="table-responsive">
        <table id="teachers" border="2" class="table table-striped table-bordered table-hover" >
          <thead>
            <tr>
              <th>Email ID</th>
              <th>First name</th>
              <th>Middle name</th>
              <th>Last name</th>
              <th>Gender</th>
              <th>Date of Birth</th>
              <th>Address</th>
              <th>City</th>
              <th>Contactno</th>
              <th>Subject</th>
              <th colspan="4">Action</th>
            </tr> </thead>
            <tbody>
              <% @teachers.each do |teacher| %>
              <tr><td><%= teacher.email%></td>
                <td><%= teacher.first_name %></td>
                <td><%= teacher.middle_name %></td>
                <td><%= teacher.last_name %></td>
                <td><%= teacher.gender %></td>
                <td><%= teacher.dateofbirth.strftime("%d-%m-%Y")%></td>
                <td><%= teacher.address %></td>
                <td><%= teacher.city %></td>
                <td><%= teacher.contactno %></td>
                <td><%= teacher.sub_name %></td>
                 <td><%= link_to '<i class="glyphicon glyphicon-plus" title="Assign Standard and Subject"></i>'.html_safe, assign_teacher_path(teacher) %>
                </td>
                <td><%= link_to '<i class="glyphicon glyphicon-user" title="View"></i>'.html_safe,teacher_path(teacher)%>
                </td>
                <td><%= link_to '<i class="glyphicon glyphicon-pencil" title="Edit"></i>'.html_safe,edit_teacher_path(teacher)%></td>   
                <td><%= link_to '<i class="glyphicon glyphicon-trash title="delete"></i>'.html_safe, teacher_path(teacher),method: :delete,data: {confirm: 'Are you sure?'} %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%= will_paginate @teachers, renderer: BootstrapPagination::Rails,class: "pull-right"%>

        <br><%= link_to "New Teacher", new_teacher_path , class: "btn btn-success" %>
            <%= link_to "Back",  admin_welcome_path  , class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>