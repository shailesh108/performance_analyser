<div class="container">
<div class="row">
<div class="col-sm-12">
	<div class="login-panel panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Teacher assigned to Standard : <%= @standard %> Subject : <%= @subject %></h3> 
		</div>
		<div class="panel-body">
      <div class="table-responsive">
			<table border="2" class="table table-striped table-bordered table-hover" >
				<thead>					<tr>
						<th>Profile Pic.</th>
						<th>Id</th>          
						<th>Name</th>
						<th>Email</th>
						<th colspan="4">Action</th>
					</tr>
				</thead>
				<tbody>
					<tr>

						<td><%= image_tag("/avatars/teachers/originals/" + @teacher_profile.avatar_file_name, size: "50x50") %></td>
						<td><%=  @teacher_profile.id%></td>
						<td><%=  @teacher_profile.first_name  %></td>
						<td><%=  @teacher_profile.email  %></td>
						 <td><%= link_to '<i class="glyphicon glyphicon-plus" title="Assign Standard and Subject"></i>'.html_safe, assign_teacher_path(@teacher_profile) %>
                </td>
                <td><%= link_to '<i class="glyphicon glyphicon-user" title="View"></i>'.html_safe,teacher_path(@teacher_profile)%>
                </td>
                <td><%= link_to '<i class="glyphicon glyphicon-pencil" title="Edit"></i>'.html_safe,edit_teacher_path(@teacher_profile)%></td>   
                <td><%= link_to '<i class="glyphicon glyphicon-trash title="delete"></i>'.html_safe, teacher_path(@teacher_profile),method: :delete,data: {confirm: 'Are you sure?'} %>
                </td>
					</tr>
				</tbody>	
			</table>
			</div>
		</div>
	</div>
	<%= link_to "Search", search_teachers_path, :class => "btn btn-info" %> 
</div>
</div>
</div>