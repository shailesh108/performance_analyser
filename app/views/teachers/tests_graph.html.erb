<div class="container">

	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Test Performance <span class="badge pull-right">Total Attendence <%=@rank.size%></span></h3>
		</div>
		<div class="panel-body">
		 
			<div class="row">
				<div class="col-md-6">
				  <div class="thumbnail">
					<%=area_chart @result,label:"Percentage",xtitle: "Student Name", ytitle: "Percentage" , widht:"300px",height: "200px",discrete: true%>
					</div>
				</div>
				<div class="col-md-6">
					<div id="printableArea">
					<div class="table-responsive">
						<table id="teachers" border="2" class="table table-striped table-bordered table-hover" >
							<thead>
								<tr>
									<th>Rank</th>
									<th>Student Name</th>
									<th>Percentage</th>
								</tr>
							</thead>
							<tbody><%r=0%>
								<% @rank.each do |result| %>
								<tr>
									<td> <%=r=r+1%></td>
									<td>
										<%= result.second.first%>

									</td>
									<td>

										<%= result.first%>%
									</td>
								</tr>
								<%end%>   
							</tbody>
						</table>
						
					</div>
					</div>
					<input type="button" onclick="printDiv('printableArea')" value="Print Result" class="btn btn-primary  pull-right"/>
				</div>
			</div>

		</div>

	</div>
	 <script type="text/javascript">
function printDiv(divName) {
     var printContents = document.getElementById(divName).innerHTML;
     var originalContents = document.body.innerHTML;

     document.body.innerHTML = printContents;

     window.print();

     document.body.innerHTML = originalContents;
}
</script>
</div>
