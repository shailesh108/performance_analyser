<div class="col-sm-10 text-left">
<p id="notice"><%= notice %></p>

<h1>Listing Student</h1>

<table border="2"  class="table table-striped table-bordered table-hover" >
  <head>
    
 
  <tr>
    <th>Enrollment_no</th>
     <th>Password</th>
     <th>First name</th>
     <th>Middle name</th>
     <th>Last name</th>
     <th>Date of Birth</th>
     <th>Address</th>
     <th>City</th>
     <th>Contactno</th>
     <th>Standard</th>
     <th colspan="3">Action</th>
     </tr> </head>
    <tbody>
    <% @students.each do |student| %>
      <tr><td><%= student.enrollment_no %></td>
 <td><%= student.password%></td>
  <td><%= student.first_name %></td>
    <td><%= student.middle_name %></td>
    <td><%= student.last_name %></td>
  <td><%= student.date_of_birth %></td>
  <td><%= student.address %></td>
  <td><%= student.city %></td>
  <td><%= student.contactno %></td>
  <td><%= student.standard_id %></td>

 <td><%= link_to student_path(student) do %>
      <i class="fa fa-eye"></i>
      <%end%></td>
 <td><%= link_to edit_student_path(student) do %>
      <i class="fa fa-pencil-square-o"></i>
      <%end%></td>
      
      <td><%= link_to student_path(student),method: :delete,data: {confirm: 'Are you sure?'} do %>
      <i class="fa fa-times"></i>
      <%end%></td>
       
</tr>
    <% end %>
  </tbody>
</table>

<br><%= link_to new_student_path , class: "btn btn-primary" do %>
      <i>New Student</i>
      <%end%>
</div>