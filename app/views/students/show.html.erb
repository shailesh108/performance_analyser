					            </div>
					          </div>


					          <div class="col-sm-6">
					            <div class="row mgbt-xs-0">
					              <label class="col-xs-5 control-label">Gender:</label>
					              <div class="col-xs-7 controls"><%=@student.gender%></div>
					              <!-- col-sm-10 --> 
					            </div>
					          </div>

					          <div class="col-sm-6">
					            <div class="row mgbt-xs-0">
					              <label class="col-xs-5 control-label">City:</label>
					              <div class="col-xs-7 controls"><%=@student.city%></div>
					              <!-- col-sm-10 --> 
					            </div>
					          </div>
					          <div class="col-sm-6">
					            <div class="row mgbt-xs-0">
					              <label class="col-xs-5 control-label">Address:</label>
					              <div class="col-xs-7 controls"><%=@student.address%></div>
					              <!-- col-sm-10 --> 
					            </div>
					          </div>
					          <div class="col-sm-6">
					            <div class="row mgbt-xs-0">
					              <label class="col-xs-5 control-label">Birthday:</label>
					              <div class="col-xs-7 controls"><%=@student.date_of_birth.strftime("%d-%m-%Y")%></div>
					              <!-- col-sm-10 --> 
					            </div>
					          </div>
					          <div class="col-sm-6">
					            <div class="row mgbt-xs-0">
					              <label class="col-xs-5 control-label">Standard</label>
					              <div class="col-xs-7 controls"><%=@student.standard_id%></div>
