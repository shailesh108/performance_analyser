					              <div class="col-xs-7 controls"><%=@student.first_name%></div>
					              <!-- col-sm-10 --> 
					            </div>
					          </div>
					          <div class="col-sm-6">
					            <div class="row mgbt-xs-0">
					              <label class="col-xs-5 control-label">Last Name:</label>
					              <div class="col-xs-7 controls"><%=@student.last_name%></div>
					              <!-- col-sm-10 --> 
					            </div>
					          </div>
					          <div class="col-sm-6">
					            <div class="row mgbt-xs-0">
					              <label class="col-xs-5 control-label">Middle Name:</label>
					              <div class="col-xs-7 controls"><%=@student.middle_name%></div>
					              <!-- col-sm-10 --> 
					            </div>
					          </div>
					          <div class="col-sm-6">
					            <div class="row mgbt-xs-0">
					              <label class="col-xs-5 control-label">Email:</label>
					              <div class="col-xs-7 controls"><%=@student.email%></div>
