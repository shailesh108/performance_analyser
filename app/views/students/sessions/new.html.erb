<div class="container">
<div class="vcenter">
<div class="row">
<div class="col-md-4 col-md-offset-4">
<div class="login-panel panel panel-default">
<div class="panel-heading">

<h3 class="panel-title">Student Login</h3>
</div>

<div class="panel-body">
<%= render 'layouts/loginerror'%>

<%= form_for(resource, as: resource_name, url: student_session_path(resource_name)) do |f| %>
<fieldset>

<div class="form-group">
<%= f.text_field :enrollment_no, autofocus: true ,:class => "form-control",:placeholder => "Enrollment_no"%>
</div>
<div class="form-group">
<%= f.password_field :password, autocomplete: "off",:class => "form-control",:placeholder => "Password"%>
</div>
<div class="actions">
<%= f.submit "Log in" ,:class => "btn btn-lg btn-success btn-block" %>
</div>
</fieldset>

<% end %>
</div>
</div>
</div>
</div>                   
</div>
</div>
