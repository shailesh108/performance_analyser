<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Listing Questions</h1>
      <div class="table-responsive">
        <table border="2" class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Question</th>
              <th>A</th>
              <th>B</th>
              <th>C</th>
              <th>D</th>
              <th>Answer</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @questions.each do |question| %>
            <tr>
              <td>
                <%=question.question %>
              </td>
              <td>
                <%=question.option1 %>
              </td>
              <td>
                <%=question.option2 %>
              </td>
              <td>
                <%=question.option3 %>
              </td>
              <td>
                <%=question.option4 %>
              </td>
              <td>
                <%=question.answer %>
              </td>

              <td><%= link_to '<i class="glyphicon glyphicon-pencil" title="Edit"></i>'.html_safe, edit_test_question_path(@test_id, question) %>
              </td>
              <td><%= link_to '<i class="glyphicon glyphicon-trash" title="delete"></i>'.html_safe,  test_question_path(@test_id, question), method: :delete, data: {confirm: 'Are you sure?'} %>

              </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to "Tests", tests_path, class: "btn btn-info" %>
        </div>
      </div>
    </div>
  </div>
